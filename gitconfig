[init]
	defaultBranch = main

[core]
	# Make `git rebase` safer on macOS.
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustctime = false

	# Speed up commands involving untracked files such as `git status`.
	# https://git-scm.com/docs/git-update-index#_untracked_cache
	untrackedCache = true

	whitespace = trailing-space

	excludesfile = ~/.gitignore
[gpg]
	program = gpg

[commit]
	gpgsign = true
	template = ~/.gitmessage

[user]
	name = Iain Smith
	email = iainsmith@users.noreply.github.com
	signingkey = "Iain Smith <iainsmith@users.noreply.github.com>"

[branch]
	# https://git-scm.com/docs/git-config#Documentation/git-config.txt-branchautoSetupMerge
	# --track by default
	autosetupmerge = always
	autoSetupRebase = always
	sort = -committerdate # Most recent first

[push]
	default = current

[apply]
	whitespace = fix

[help]
	autocorrect = 20

[pull]
	rebase = true
	default = current

[fetch]
    prune = true

[rebase]
    autosquash = true

[includeIf "gitdir:~/Developer/work/"]
	path = ~/Developer/work/.gitconfig-work

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    line-numbers = true

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax


[merge]
	tool = opendiff

[mergetool "opendiff"]
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
